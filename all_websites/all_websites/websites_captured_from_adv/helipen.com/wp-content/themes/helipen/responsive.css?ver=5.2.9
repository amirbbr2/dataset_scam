@media screen and (max-width: 1200px){
	
}
@media screen and (max-width: 1000px){
.xs-header{
	width:100%;
	height:auto;
	float:right;	
}
.xsheader-top{
	width:100%;
	height:auto;
	float:right;
	border-top:4px solid #ff8000;
	text-align:center;	
}
.xsheader-top img{
	max-width:4em;
	height:auto;
	margin:.6em 0;	
}
.xsheader-tel{
	width:100%;
	height:auto;
	float:right;
	background:#f1f1f1;	
}
.xsheader-tel ul li{
	float:right;	
}
.xsheader-tel ul li{
	display:inline-block;
	font-size:1.5em;
	margin:.5em .5em 0 .6em;	
}
.xsheader-tel ul li a{
	color:#c2c2c2;
}
.xsheader-tel ul li a:hover{
	color:#ff8000;
}
.xsheader-tel ul li:first-child{
	float:left;
	margin:0.7em 0;
	font-size:1.1em;
	font-family: IRANSansBold;	
}
.xsheader-tel ul li:first-child a{
	color:#000000;	
}
.xsheader-tel ul li:first-child i{
	font-size:1.1em;
	color:#ff8000;	
}
.xs-navbar{
	width:100%;
	height:auto;
	float:right;	
}
.xs-menu{
	width:100%;
	height:auto;
	float:right;
	background:#FFFFFF;
	padding:10px 0;
}
.xs-menu a:hover{
	cursor:pointer;	
}
.xs-menu i{
	float:right;
	margin:2px 0 0 5px;	
}
.navmobile-menu{
	display:none;
	background:#ECECEC;	
}
.navmobile-menu ul li{
	float:right;
	width:100%;
	height:auto;
	padding:1em 1em;
	transition:all 0.3s;	
}
.navmobile-menu .activemenu a{
	background:#fff !important;	
}
.customers-x{
	width:100%;
	height:auto;
	float:right;
	background:rgba(255,255,255,0.85);
	text-align:center;	
}
.customers-x h5{
	padding:2em 0;
}
.index-customers{
	min-height:400px;	
}
.customers-item img{
	width:9em;	
}
.customers-item{
	min-height:70px !important;
	line-height:150px;	
}
.tandis-body ul li{
	margin:1.3em .3em;	
}
.catslider-body{
	min-height:500px;	
}
.catnews-body{
	height:500px;	
}
.catnews-content{
	min-height:380px;	
}
.catnews-content ul li{
	font-size:.9em;	
}
.catslider-tlt{
	height:60px;	
}
.catslider-tlt h1{
	line-height:1.6;	
}
}
@media screen and (max-width: 400px){
.index-customers{
	min-height:600px;	
}
.customers-item img{
	width:9em;	
}
.customers-item{
	min-height:150px !important;
	line-height:150px;	
}
.tandis-body ul li{
	margin:1em .8em;	
}
.catnews-body{
	margin-bottom:2em;	
}
.catslider-body{
	min-height:470px;	
}
.single-contentbody{
	margin:2em 0;	
}
.singlecontet-tlt h1{
	line-height:1.7;	
}
.postthumb{
    width:100%;   
}
.postkh{
    width:100%;
}
}