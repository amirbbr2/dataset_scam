        html += ' </div>';
        html += ' </div>';
        html += ' </div>';
        html += ' </div>';
        html += ' </div>';
        
    $("#AddToCartModalContainer").html(html);
    $("#modalAddToCartProduct").modal('toggle');
}

function hideModal() {
    $("#modalAddToCartProduct").modal('hide');
}
